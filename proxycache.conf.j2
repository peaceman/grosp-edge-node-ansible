location / {
    proxy_cache segments;
    proxy_cache_lock on;
    proxy_cache_valid 15m;
    proxy_ignore_headers Vary Expires Cache-Control;
    proxy_cache_key $scheme$proxy_host$uri;
    proxy_pass {{ proxy_cache_upstream_url }};
}
{% endblock %}
